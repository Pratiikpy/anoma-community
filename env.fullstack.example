# Full-Stack Vercel Environment Variables
# Copy this file to .env.local and fill in your values
# All variables will be set in Vercel dashboard

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# JWT Configuration
JWT_SECRET=your_very_long_random_jwt_secret_key_here

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_admin_password

# Admin API Secret (for admin-only endpoints)
ADMIN_SECRET=your_admin_api_secret_key

# Optional: Email Service (for notifications)
# SENDGRID_API_KEY=your_sendgrid_api_key
# RESEND_API_KEY=your_resend_api_key

# Optional: Analytics and Monitoring
VITE_APP_ENV=production
VITE_APP_VERSION=1.0.0

# Note: Variables starting with VITE_ are exposed to the frontend
# Variables without VITE_ prefix are only available in API routes 